{{#if addNewPlan}}

<h1>New Plan</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title class="title"}}
      </div>

      <div class="form-group">
        <label for="version">Version</label>
        {{input value=version class="version"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author class="author"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date class="date"}}
      </div>

      <button {{action 'savePlan'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'planFormShow'}}>Create New Plan</button>
{{/if}}
