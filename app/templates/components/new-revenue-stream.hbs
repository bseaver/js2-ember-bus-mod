{{#if addNewRevenueStream}}
  <p>New Revenue Stream</p>
  <div>
    <form>
      <div class="form-group">
        <label for="tag">Tag</label>
        {{input value=tag class="tag"}}
      </div>

      <div class="form-group">
        <label for="customerSegment">Customer Segment</label>
        {{input value=customerSegment class="customerSegment"}}
      </div>

      <div class="form-group">
        <label for="details">Details</label>
        {{input value=details class="details"}}
      </div>

      <button {{action 'saveRevenueStream'}}>Save</button>
    </form>
  </div>
{{else}}
<div class="row new-button">
  <button {{action 'revenueStreamFormShow'}}>New</button>

</div>
{{/if}}
